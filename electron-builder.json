
{
  "appId": "com.servepics.musicplayer",
  "productName": "ServePics Music Player",
  "copyright": "Copyright Â© 2024",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.music",
    "icon": "public/icon.icns"
  },
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": [
      "deb",
      "AppImage"
    ],
    "category": "Audio"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
